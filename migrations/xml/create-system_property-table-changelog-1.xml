<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="${default_author}" id="system-property-create-table" failOnError="true">
        <comment>Create a table to store System Properties</comment>
        <createTable tableName="system_property">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_system_property"/>
            </column>
            <column name="tenantid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="property_value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="create_timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="update_timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="system_property"/>
        </rollback>
    </changeSet>
    <changeSet author="${default_author}" id="system-property-create-ux" failOnError="true">
        <comment>System Property names must be unique</comment>
        <createIndex
                indexName="ux_system_property_name"
                tableName="system_property"
                unique="true">
            <column name="name"/>
            <column name="tenantid"/>
        </createIndex>
    </changeSet>
    <changeSet author="${default_author}" id="system-property-create-ix1" failOnError="true">
        <createIndex indexName="ix_tenantid" tableName="system_property">
            <column name="tenantid"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>