<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="${default_author}" id="pool-create-table" failOnError="true">
        <comment>Create a table to store Pools</comment>
        <createTable tableName="pool">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_pool"/>
            </column>
            <column name="tenantid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="length" type="smallint" defaultValue="25">
                <constraints nullable="false"/>
            </column>
            <column name="length_unit" type="varchar(1)" defaultValue="Y">
                <constraints nullable="false"/>
            </column>
            <column name="lane_count" type="smallint" defaultValue="6">
                <constraints nullable="false"/>
            </column>
            <column name="bidirectional" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="create_timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="update_timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="pool"/>
        </rollback>
    </changeSet>

    <changeSet author="${default_author}" id="pool-create-ux" failOnError="true">
        <comment>Pool names must be unique</comment>
        <createIndex
                indexName="ux_pool_name"
                tableName="pool"
                unique="true">
            <column name="name"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>